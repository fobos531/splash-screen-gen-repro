{
  "expo": {
    "name": "splash-screen-gen-repro",
    "slug": "splash-screen-gen-repro",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/ic_launcher.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon-foreground.png",
        "monochromeImage": "./assets/images/icon-foreground.png",
        "backgroundImage": "./assets/images/ic_launcher_background.png"
      },
      "package": "com.jakov.glavina.splashscreengenrepro"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-light.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FF0000"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
